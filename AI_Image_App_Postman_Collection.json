  "event": [
    {
      "listen": "prerequest",
      "script": {
        "type": "text/javascript",
        "exec": [
          "// Set environment variables based on the selected environment",
          "if (pm.environment.get('baseUrl') === undefined) {",
          "    pm.environment.set('baseUrl', 'http://localhost:5000'); // Default to local",
          "}"
        ]
      }
    },
    {
      "listen": "test",
      "script": {
        "type": "text/javascript",
        "exec": [
          "// Save auth token from login response",
          "if (pm.response.code === 200 && pm.request.url.path.includes('login')) {",
          "    var jsonData = pm.response.json();",
          "    if (jsonData.token) {",
          "        pm.environment.set('authToken', jsonData.token);",
          "    }",
          "}"
        ]
      }
    }
