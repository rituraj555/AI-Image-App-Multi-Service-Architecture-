option_settings:
  aws:elasticbeanstalk:application:environment:
    NODE_ENV: production
    PORT: 8081
  aws:elasticbeanstalk:container:nodejs:
    NodeCommand: "npm start"
    NodeVersion: 18.x
  aws:elasticbeanstalk:container:nodejs:staticfiles:
    /public: /public
  aws:elasticbeanstalk:container:nodejs:proxypass:
    /: 'http://localhost:8081/'

files:
  "/etc/nginx/conf.d/proxy.conf":
    mode: "000644"
    owner: root
    group: root
    content: |
      client_max_body_size 50M;
      
      # Timeouts
      proxy_connect_timeout 300;
      proxy_send_timeout 300;
      proxy_read_timeout 300;
      send_timeout 300;

  "/opt/elasticbeanstalk/hooks/appdeploy/post/99_restart_nginx.sh":
    mode: "000755"
    owner: root
    group: root
    content: |
      #!/bin/bash
      service nginx restart

container_commands:
  01_setup_nginx:
    command: "cp .platform/nginx/conf.d/elasticbeanstalk/proxy.conf /etc/nginx/conf.d/elasticbeanstalk/proxy.conf"
  02_restart_nginx:
    command: "service nginx restart"
